{
  "expo": {
    "name": "Maternal Health Tracker",
    "slug": "maternal-health-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#E8F5E9"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.maternalhealth.tracker",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access for voice symptom input.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert voice to text."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E8F5E9"
      },
      "package": "com.maternalhealth.tracker",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.DETECT_SCREEN_CAPTURE"
      ]
    }
  }
}